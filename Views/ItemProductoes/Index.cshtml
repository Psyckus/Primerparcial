@model IEnumerable<Parcial_1.Models.ItemProducto>

@{
    ViewData["Title"] = "Buscar Ítems de Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ítems de Producto</h1>

<!-- Formulario de búsqueda -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <input type="text" name="codigoBarras" class="form-control" placeholder="Buscar por código de barras" />
    </div>
    <div class="form-group mr-2">
        <input type="number" name="cantidadDisponible" class="form-control" placeholder="Cantidad disponible" />
    </div>
    <div class="form-group mr-2">
        <input type="text" name="urlImagen" class="form-control" placeholder="Buscar por URL de imagen" />
    </div>
    <div class="form-group mr-2">
        <input type="number" name="precio" class="form-control" placeholder="Buscar por precio" step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ProductoId)</th>
            <th>@Html.DisplayNameFor(model => model.CodigoBarras)</th>
            <th>@Html.DisplayNameFor(model => model.CantidadDisponible)</th>
            <th>@Html.DisplayNameFor(model => model.UrlImagen)</th>
            <th>@Html.DisplayNameFor(model => model.Precio)</th>
            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
            <th>@Html.DisplayNameFor(model => model.FechaModificacion)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductoId)</td>
                <td>@Html.DisplayFor(modelItem => item.CodigoBarras)</td>
                <td>@Html.DisplayFor(modelItem => item.CantidadDisponible)</td>
                <td>@Html.DisplayFor(modelItem => item.UrlImagen)</td>
                <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaModificacion)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
