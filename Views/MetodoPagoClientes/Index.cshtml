@model IEnumerable<Parcial_1.Models.MetodoPagoCliente>

@{
    ViewData["Title"] = "Buscar Métodos de Pago";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Métodos de Pago</h1>

<!-- Formulario de búsqueda -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <input type="text" name="proveedor" class="form-control" placeholder="Buscar por proveedor" />
    </div>
    <div class="form-group mr-2">
        <input type="text" name="cuenta" class="form-control" placeholder="Buscar por cuenta" />
    </div>
    <div class="form-group mr-2">
        <input type="date" name="fechaExpira" class="form-control" placeholder="Fecha de expiración" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ClienteId)</th>
            <th>@Html.DisplayNameFor(model => model.TipoPagoId)</th>
            <th>@Html.DisplayNameFor(model => model.NombreProveedor)</th>
            <th>@Html.DisplayNameFor(model => model.Cuenta)</th>
            <th>@Html.DisplayNameFor(model => model.FechaExpira)</th>
            <th>@Html.DisplayNameFor(model => model.PorDefecto)</th>
            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
            <th>@Html.DisplayNameFor(model => model.FechaModificacion)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ClienteId)</td>
                <td>@Html.DisplayFor(modelItem => item.TipoPagoId)</td>
                <td>@Html.DisplayFor(modelItem => item.NombreProveedor)</td>
                <td>@Html.DisplayFor(modelItem => item.Cuenta)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaExpira)</td>
                <td>@Html.DisplayFor(modelItem => item.PorDefecto)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaModificacion)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
